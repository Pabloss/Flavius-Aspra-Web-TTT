{
    "name": "pavulon-mentored/flavius-aspra-tictactoe",
    "description": "First excercice on mentoring by Flavius Aspra",
    "type": "project",
    "autoload": {
        "psr-4": {
          "Domain\\TicTacToe\\": "Domain/src/",
          "Application\\App\\": "src/App/src/App/"
        }
    },
    "autoload-dev": {
          "TicTacToeTest\\": "test/"
    },
    "config": {
        "bind-dir": "bin/"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.4",
        "zendframework/zend-expressive-tooling": "^0.4.5"
    },
    "authors": [
        {
            "name": "Pawe≈Ç Zimnowodzki",
            "email": "pawel.zimnowodzki@gmail.com"
        }
    ],
    "scripts":{
	    "post-install-cmd": "chmod +x bin/serve",
	    "serve": "@php -S 0.0.0.0:8080 -t src/Plugin/UI/Web/public index.php &",
	    "headless-chrome": "chrome --disable-gpu --headless --remote-debugging-address=0.0.0.0 --remote-debugging-port=9222 &",
	    "serve-phpunit": [
	    	"@serve",
		"@headless-chrome"
	    ]
    },
    "require": {
        "zendframework/zend-expressive": "^2.1",
        "zendframework/zend-expressive-fastroute": "^2.1",
        "zendframework/zend-servicemanager": "^3.3",
        "zendframework/zend-component-installer": "^1.1",
        "zendframework/zend-config-aggregator": "^1.0",
        "zendframework/zend-mvc": "^3.1",
        "http-interop/http-middleware": "0.*",
        "dmore/chrome-mink-driver": "^2.5"
    }
}

